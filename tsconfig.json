{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "declaration": false,
    "baseUrl": "src/",
    "target": "es5",
    "rootDir": "src/",
    "outDir": "dest/",
    "lib": [
      "es2015",
      "scripthost",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules",
    "dest"
  ]
}
